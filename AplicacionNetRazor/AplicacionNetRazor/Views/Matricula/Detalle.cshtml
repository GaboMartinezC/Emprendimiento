@model AplicacionNetRazor.Models.ViewModels.DetalleMatriculaVM
<table class ="table">
    <thead >
        <tr>
            <td>ID</td>
            <td>Materia</td>
            <td>Costo</td>
        </tr>
    </thead>
    <tbody>
        @{
            var total = 0.0;
        }
        @foreach (var detalle in Model.DetalleMatricula)
        {
            total += detalle.Materia.Costo;
            <tr>
                <td>@detalle.Id</td>
                <td>@detalle.Materia.Nombre</td>
                <td>@detalle.Materia.Costo</td>
            </tr>
        }
    </tbody>
</table>
<h1>Costo de la matrícula: @total $</h1>